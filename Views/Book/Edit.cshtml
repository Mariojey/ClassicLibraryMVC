@using ClassicLibraryMVC.Models
@model Book
@{
    ViewData["Title"] = "Edit Book";
}

<h1>Edit Book</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuthorId">Author</label>
        <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.Authors"></select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PublishingHouseId">Publishing House</label>
        <select asp-for="PublishingHouseId" class="form-control" asp-items="ViewBag.PublishingHouses"></select>
        <span asp-validation-for="PublishingHouseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PublicationYear"></label>
        <input asp-for="PublicationYear" class="form-control" />
        <span asp-validation-for="PublicationYear" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
