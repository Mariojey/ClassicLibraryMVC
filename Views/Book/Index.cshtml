@using ClassicLibraryMVC.Models
@model List<Book>
@{
    ViewData["Title"] = "Book Overview";
}
<h1>Book Overview</h1>

<div class="text-center w-100 h-100 bg-dark-subtle flex-column flex-column align-items-center">
    <h1 class="display-4 text-bg-light">Books</h1>
    <div class="my-4 flex flex-row align-items-center justify-content-between">
        <a class="btn btn-primary" asp-area="" asp-controller="Book" asp-action="Create">Add Book</a>
        <a class="btn btn-primary" asp-area="" asp-controller="Book" asp-action="Create">Add Author</a>
        <a class="btn btn-primary" asp-area="" asp-controller="Book" asp-action="Create">Add Publishing House</a>
    </div>

    <table class="table table-dark">
        @foreach (var book in Model)
        {
            <tr class="text-bg-dark">
                <td>@book.Title</td>
                <td>@($"{book.Author?.Names} {book.Author?.Surnames}")</td>
                <td>@book.PublishingHouse?.Name</td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@book.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@book.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
